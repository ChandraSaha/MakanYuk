<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_restaurant"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            >

            <ImageView
                android:id="@+id/imgview1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="4"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3fbfcfc"
                >
                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Restaurant"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cafe"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            >

            <ImageView
                android:id="@+id/imgview2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="4"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3fbfcfc"
                >
                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvNama2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Cafe"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_fast_food"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            >

            <ImageView
                android:id="@+id/imgview3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="4"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3fbfcfc"
                >
                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvNama3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Fast Food"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cofee_shop"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout4"
            >

            <ImageView
                android:id="@+id/imgview4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="4"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B3fbfcfc"
                >
                <TextView
                    android:padding="5dp"
                    android:id="@+id/tvNama4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Coffe Shop"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>